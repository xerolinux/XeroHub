---
const currentYear = new Date().getFullYear();
const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const socialLinks = [
  { label: 'GitHub', href: 'https://github.com/xerolinux', icon: 'github' },
  { label: 'Discord', href: 'https://discord.gg/5sqxTSuKZu', icon: 'discord' },
  { label: 'YouTube', href: 'https://youtube.com/@XeroLinux', icon: 'youtube' },
  { label: 'Mastodon', href: 'https://fosstodon.org/@XeroLinux', icon: 'mastodon' },
];

const footerLinks = [
  { label: 'About', href: `${base}/about/` },
  { label: 'Updates', href: `${base}/updates/` },
  { label: 'Gear', href: `${base}/gear/` },
  { label: 'Download', href: `${base}/download/` },
  { label: 'Wiki', href: 'https://wiki.xerolinux.xyz' },
  { label: 'Merch', href: 'https://shop.xerolinux.xyz' },
];
---

<footer class="relative z-10 border-t border-[var(--color-border)] mt-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div>
        <a href={`${base}/`} class="flex items-center gap-3 mb-4">
          <img src={`${base}/logos/logo.png`} alt="XeroLinux" width="192" height="192" loading="lazy" class="w-9 h-9 rounded-lg" />
          <span class="font-heading font-semibold text-lg text-[var(--color-text-primary)]">
            Xero<span class="text-[var(--color-accent)]">Linux</span>
          </span>
        </a>
        <p class="text-sm text-[var(--color-text-secondary)] leading-relaxed">
          Our Base Of Operations...
        </p>
      </div>

      <!-- Links -->
      <div>
        <h3 class="font-heading font-semibold text-sm uppercase tracking-wider text-[var(--color-text-muted)] mb-4">
          Navigation
        </h3>
        <div class="grid grid-cols-2 gap-2">
          {footerLinks.map(link => (
            <a
              href={link.href}
              class="text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-accent-light)] transition-colors duration-200"
            >
              {link.label}
            </a>
          ))}
        </div>
      </div>

      <!-- Socials -->
      <div>
        <h3 class="font-heading font-semibold text-sm uppercase tracking-wider text-[var(--color-text-muted)] mb-4">
          Community
        </h3>
        <div class="flex gap-3">
          {socialLinks.map(link => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-11 h-11 rounded-xl glass glass-hover flex items-center justify-center text-[var(--color-text-secondary)] hover:text-[var(--color-accent-light)] transition-all duration-200"
              aria-label={link.label}
              title={link.label}
